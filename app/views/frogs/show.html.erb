
<div class="container">
    <div class="row">
        <div class="col-12">
        <h1 class="text-center">Frog Details</h1>
        </div>
    </div>

    <div class="row">
        <div class="col-12">
        <h2><%= @frog.name %></h2>
        <p><%= @frog.description %></p>
        </div>
    </div>


    </div>

    <!-- Add a button to book the frog -->
    <div class="row">
        <div class="col-12 text-center">
        <h2> Book this Frog</h2>
        <%= simple_form_for [@frog, @booking] do |f| %>
          <%= f.input :start_date %>
          <%= f.input :end_date %>
          <%= f.submit "Reserve", class: "btn btn-primary" %>
        <% end %>
</div>
