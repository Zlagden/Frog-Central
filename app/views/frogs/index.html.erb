<div>
  <h1 style="text-align: center">Rent your Frog Today!</h1>

  <%= link_to "New Frog", new_frog_path if user_signed_in? %>

  <div class="card-container">
    <% @frogs.each do |frog| %>
      <%= link_to frog_path(frog) do %>

        <div class="card-trip">
          <%= image_tag frog.photo_url %>
            <div class="card-trip-infos">
                <div>
                  <h2> <strong><%= frog.name %></strong></h2>
                  <p><%=frog.description %></p>
                  <h3><%= frog.age %></h3>
                  <p><%= frog.color %><p>
                  <p><%= frog.species %></p>
                </div>

                <h2 class="card-trip-pricing"> 5 * </h2>
                <p class="card-trip-user avatar-bordered"> â™¡ </p>
              </div>
        </div>
      <% end %>
    <% end %>
  </div>

</div>
