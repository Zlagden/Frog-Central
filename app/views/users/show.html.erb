<div class="container my-5">
  <div class="card p-4 shadow-sm text-center">
    <h1 class="mb-3 display-5"><%= @user.username.capitalize %></h1>

    <ul class="list-unstyled">
      <li><strong>Email:</strong> <%= @user.email %></li>
      <li><strong>Joined:</strong> <%= @user.created_at.strftime("%d %B %Y") %></li>
      <li><strong>Last updated:</strong> <%= @user.updated_at.strftime("%d %B %Y") %></li>
    </ul>

    <div class="mt-4 d-flex justify-content-center gap-3">
      <%= link_to "Edit Profile", edit_user_registration_path, class: "btn btn-outline-primary" %>
      <%= link_to "Sign out", destroy_user_session_path, method: :delete, class: "btn btn-outline-danger" %>
      <%= link_to "Back", :back, class: "btn btn-secondary" %>
      <%= link_to "Home", root_path, class: "btn btn-success" %>
    </div>
  </div>
</div>

