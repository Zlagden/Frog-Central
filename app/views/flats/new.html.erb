<h1>New Flat</h1>
<%= form_with model: @flat, local: true do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %><br>

  <%= f.label :address %>
  <%= f.text_field :address %><br>

  <%= f.label :price %>
  <%= f.number_field :price %><br>

  <%= f.label :description %>
  <%= f.text_area :description %><br>

  <%= f.submit "Create Flat" %>
<% end %>
